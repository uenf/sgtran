<% if current_user.has_role? :admin %>
  <a href="/motoristas/new" class="link_new">Adicionar Motorista</a>
<% end %>

<table id="base_de_dados" class="tabela_base_de_dados">
  <tr>
    <th class="celula_neutra_estatica"></th>
    <th>Matr&iacute;cula</th>
    <th>Nome</th>
    <th>Telefone</th>
    <th class="celula_neutra_estatica"></th>
  </tr>

<% @motoristas.each do |motorista| %>
  <tr >
    <%= "<td class='ativo'></td>" if motorista.status == Motorista::ATIVO %>
    <%= "<td class='inativo'></td>" if motorista.status == Motorista::INATIVO %>
    <td onclick="location.href='<%= motorista_path(motorista) %>'" onmouseover="this.style.cursor='pointer'"><%=h motorista.matricula %></td>
    <td onclick="location.href='<%= motorista_path(motorista) %>'" onmouseover="this.style.cursor='pointer'"><%=h motorista.nome %></td>
    <td onclick="location.href='<%= motorista_path(motorista) %>'" onmouseover="this.style.cursor='pointer'"><%=h motorista.telefone %></td>
    <% if current_user.has_role? :admin  %>
      <td onclick="location.href='<%= edit_motorista_path(motorista) %>'" onmouseover="this.style.cursor='pointer'"><%= link_to image_tag("editar_dado.png", :border => 0, :alt => "Editar"), edit_motorista_path(motorista) %></td>
    <% else %>
      <td></td>
    <% end %>
  </tr>
<% end %>
</table>

