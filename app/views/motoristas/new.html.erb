<div class="show_padrao">
<h1>Novo Motorista</h1>

<% form_for(@motorista) do |f| %>
  <%= mensagem_de_erro(@motorista) %>

  <div class="show_linha">
    <div class="linha_titulo"><%= f.label :matricula, "Matr&iacute;cula:", :class => "label_obrigatorio" %></div>
    <div class="linha_texto_neutro"><%= f.text_field :matricula %></div>
  </div>

  <div class="show_linha">
    <div class="linha_titulo"><%= f.label :nome_do_motorista, "Nome:", :class => "label_obrigatorio" %></div>
    <div class="linha_texto_neutro"><%= f.text_field :nome_do_motorista %></div>
  </div>

  <div class="show_linha">
    <div class="linha_titulo"><%= f.label :telefone_do_motorista, "Telefone:", :class => "label_obrigatorio" %></div>
    <div class="linha_texto_neutro"><%= f.text_field :telefone_do_motorista %></div>
  </div>

  <div class="show_linha">
    <div class="linha_titulo"><%= f.label :habilitacao, "Habilitação:" %></div>
    <div class="linha_texto_neutro"><%= f.text_field :habilitacao %></div>
  </div>

  <div class="show_linha">
    <div class="linha_titulo">
      <%= f.label :vencimento_habilitacao, "Vencimento da habilitação:" %>
    </div>
    <%= calendar_date_select_tag "motorista_vencimento_habilitacao",
                                @motorista.vencimento_habilitacao ? @motorista.vencimento_habilitacao.to_date.to_s_br : "",
                                :name => "motorista[vencimento_habilitacao]",
                                :month_year => "label",
                                :class => "campo_data"%>
  </div>


    <%= f.submit 'Criar Motorista', :class => "botao_concluir" %>

<% end %>
</div>

<div id="opcoes_da_visao">
  <ul>
    <li id="opcao_voltar" onclick="history.back(-1)" onmouseover="this.style.cursor = 'pointer'">Voltar</li>
  </ul>
</div>

