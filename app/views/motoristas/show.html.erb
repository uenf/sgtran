<div class="show_padrao">

  <h1>Dados do motorista</h1>

  <p>
    <label>Matrícula:</label>
    <span><%=h @motorista.matricula %></span>
  </p>

  <p>
    <label>Nome do Motorista:</label>
    <span><%=h @motorista.nome %></span>
  </p>

  <p>
    <label>Telefone:</label>
    <span><%=h @motorista.telefone %></span>
  </p>

  <p>
    <label>Habilitação:</label>
    <span><%=h @motorista.habilitacao %></span>
  </p>

  <p>
    <label>Vencimento da habilitação:</label>
    <span><%=h @motorista.vencimento_habilitacao.strftime("%d/%m/%Y") if @motorista.vencimento_habilitacao %></span>
  </p>

  <p>
    <label>Status:</label>
    <span><%=h @motorista.status %></span>
  </p>

</div>

<div id="opcoes_da_visao">
  <ul>
    <li id="opcao_voltar" onclick="history.back(-1)" onmouseover="this.style.cursor = 'pointer'">Voltar</li>
    <li id="opcao_editar" onclick="location.href='<%= edit_motorista_path(@motorista) %>'" onmouseover="this.style.cursor = 'pointer'"><%= link_to 'Editar', edit_motorista_path(@motorista) %></li>
  </ul>
</div>

