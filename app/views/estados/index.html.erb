<% if current_user.has_role? :admin %>
  <% admin = "True" %>
  <a href="/estados/new" class="link_new">Adicionar Estado</a>
<% end %>

<table id="base_de_dados" class="tabela_base_de_dados">
  <tr>
    <th class="celula_neutra_estatica"></th>
    <th>Nome</th>
    <th>Sigla</th>
    <th class="celula_neutra_estatica"></th>
  </tr>

<% @estados.each do |estado| %>
  <tr>
    <%= td_status estado %>
    <%= td_clickable estado_path(estado), estado.nome %>
    <%= td_clickable estado_path(estado), estado.sigla %>
    <% if admin %>
      <%= td_clickable edit_estado_path(estado),
                       image_tag("editar_dado.png", :border => 0, :alt => "Editar") %>
    <% else %>
      <td></td>
    <% end %>
  </tr>
<% end %>
</table>

