<h1>Listar BDTs</h1>

<table>
  <tr>
    <th>Numero</th>
    <th>Odometro recolhimento</th>
    <th>Odometro partida</th>
    <th>Objetivo</th>
    <th>Local origem</th>
    <th>Local destino</th>
  </tr>

<% @bdts.each do |bdt| %>
  <tr>
    <td><%=h bdt.numero %></td>
    <td><%=h bdt.odometro_recolhimento %></td>
    <td><%=h bdt.odometro_partida %></td>
    <td><%=h bdt.objetivo %></td>
    <td><%=h bdt.local_origem %></td>
    <td><%=h bdt.local_destino %></td>
    <td><%= link_to 'Mostrar', bdt %></td>
    <td><%= link_to 'Editar', edit_bdt_path(bdt) %></td>
  </tr>
<% end %>
</table>

