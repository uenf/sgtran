<h1>New bdt</h1>

<% form_for(@bdt) do |f| %>
  <%= f.error_messages %>
  <%= hidden_field_tag 'viagem_id', @viagem.id %>

  <p>
    <%= label_tag :veiculo_id, "Veículo" %><br />
    <%= collection_select :veiculo, :id, Veiculo.all, :id, :formatacao_para_bdt, {:prompt => "Selecione um veículo"} %>
  </p>

  <p>
    <%= label_tag :motorista_id, "Condutor" %><br />
    <%= collection_select :motorista, :id, Motorista.all, :id, :formatacao_para_bdt, {:prompt => "Selecione um motorista"} %>
  </p>

  <p>
    <%= f.label :recolhimento %><br />
    <%= f.datetime_select :recolhimento %>
  </p>
  <p>
    <%= f.label :partida %><br />
    <%= f.datetime_select :partida %>
  </p>
  <p>
    <%= f.label :odometro_recolhimento, "Odômetro recolhimento" %><br />
    <%= f.text_field :odometro_recolhimento %>
  </p>
  <p>
    <%= f.label :odometro_partida, "Odômetro partida" %><br />
    <%= f.text_field :odometro_partida %>
  </p>
  <p>
    <%= f.label :objetivo %><br />
    <%= f.text_area :objetivo %>
  </p>
  <p>
    <%= f.label :numero, "Número" %><br />
    <%= f.text_field :numero %>
  </p>
  <p>
    <%= f.label :local_origem %><br />
    <%= f.text_field :local_origem %>
  </p>
  <p>
    <%= f.label :local_destino %><br />
    <%= f.text_field :local_destino %>
  </p>
  <p>
    <%= f.submit 'Criar' %>
  </p>
<% end %>

<%= link_to 'Back', bdts_path %>

