<h1>New bdt</h1>

<% form_for(@bdt) do |f| %>
  <%= f.error_messages %>
  <%= hidden_field_tag 'viagem_id', @viagem.id %>

  <p>
    <%= f.label :numero, "Número" %>
    <%= f.text_field :numero %>
  </p>

  <p>
    <%= label_tag :veiculo_id, "Veículo" %>
    <%= collection_select :veiculo, :id, Veiculo.all, :id, :formatacao_para_bdt, {:prompt => "Selecione um veículo"} %>
    (prefixo - ordem - placa - modelo)
  </p>

  <p>
    <%= label_tag :motorista_id, "Condutor" %>
    <%= collection_select :motorista, :id, Motorista.all, :id, :formatacao_para_bdt, {:prompt => "Selecione um motorista"} %>
    (nome - matrícula)
  </p>

  <fieldset>
    <legend>Partida:</legend>
    <p>
      <label for="partida_data">Data</label>
      <%= text_field_tag 'partida_data' %>
    </p>
    <p>
      <label for="partida_horario" style="display:none;">Horário de partida</label>
      <label for="partida_horario">Horário</label>
      <%= time_select 'partida', 'horario', {:include_blank => '-'} %>
    </p>
    <p>
      <%= f.label :odometro_partida, "Odômetro" %>
      <%= f.text_field :odometro_partida %>
    </p>
  </fieldset>

  <fieldset>
    <legend>Recolhimento:</legend>
    <p>
      <label for="recolhimento_data">Data</label>
      <%= text_field_tag 'recolhimento_data' %>
    </p>
    <p>
      <label for="recolhimento_horario" style="display:none;">Horário de recolhimento</label>
      <label for="recolhimento_horario">Horário</label>
      <%= time_select 'recolhimento', 'horario', {:include_blank => '-'} %>
    </p>
    <p>
      <%= f.label :odometro_recolhimento, "Odômetro" %>
      <%= f.text_field :odometro_recolhimento %>
    </p>
  </fieldset>

  <fieldset>
      <legend>Itinerário:</legend>
      <p>
        <%= f.label :local_origem %>
        <%= f.text_field :local_origem %>
      </p>

      <p>
        <%= f.label :local_destino %>
        <%= f.text_field :local_destino %>
      </p>
  </fieldset>

  <p>
    <%= f.label :objetivo %><br />
    <%= f.text_area :objetivo %>
  </p>

  <p>
    <%= f.submit 'Criar' %>
  </p>
<% end %>

<%= link_to 'Voltar', bdts_path %>

