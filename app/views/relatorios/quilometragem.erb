<div id="tabela_exibir">
  <h1>Relatório de quilometragem</h1>

  <% form_for @relatorio, :url => {:action => 'generate_quilometragem'} do |f| %>
    <%= mensagem_de_erro(@relatorio) %>
    <p>
      <%= f.label :data_inicial, "Data inicial" %>
      <%= f.date_select :data_inicial %>
    </p>

    <p>
      <%= f.label :data_final, "Data final" %>
      <%= f.date_select :data_final %>
    </p>

    <%= f.submit 'Gerar relatório' %>
  <% end %>
</div>

