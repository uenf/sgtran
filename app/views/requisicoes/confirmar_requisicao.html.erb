<div id="confirmar_requisicao">
  <h2>Número de Protocolo: <%= @requisicao.id %></h2>
  <hr/>
  <p>
    <label>Solicitante:</label>
    <%= @requisicao.solicitante.nome %>
  </p>
  <p>
    <label>Celular do solicitante:</label>
    <%= @requisicao.celular %>
  </p>
  <p>
    <label>Data:</label>
    <%= @requisicao.data_de_reserva.strftime("%d/%m/%Y") %>
  </p>
  <p>
    <label>Veículo:</label>
    <%= @requisicao.categoria_de_veiculo.nome %>
  </p>
  <p>
    <label>Objetivo:</label>
    <%=h ObjetivoDeReserva.find(@requisicao.objetivo_de_reserva_id).texto \
      + ( @requisicao.outros.blank? ? '' : ": #{@requisicao.outros}" )
    %>
  </p>

  <p>
    <label>Passageiro(s):</label>
    <%= @requisicao.nome_telefone_passageiros %>
  </p>
  <p>
    <label>Roteiro:</label>
    <%= @requisicao.roteiro_da_agenda %>
  </p>
  <p>
    <label>Observações:</label>
    <%= @requisicao.observacao.blank? ? '-' : @requisicao.observacao %>
  </p>
</div>

<%= link_to 'Preencher outra requisição', new_requisicao_path, :class => "voltar" %>
<a href="javaScript:window.print()" class="imprimir">Imprimir Requisição</a>

