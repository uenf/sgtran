<% @requisicao.each do |requisicao| %>
  <div id="confirmar_requisicao">
    <p>
      <h2>Número de Protocolo: <%= requisicao.id %></h2>
    </p>
    <p>
      <label>Solicitante: </label><%= Solicitante.find(requisicao.solicitante_id).nome %>
    </p>
    <p>
      <label>Celular do solicitante: </label><%= requisicao.celular %>
    </p>
    <p>
      <label>Data de Reserva: </label><%= requisicao.data_de_reserva.strftime("%d/%m/%Y") %>
    </p>
    <p>
      <label>Categoria de veículo: </label><%= CategoriaDeVeiculo.find(requisicao.categoria_de_veiculo_id).nome %>
    </p>
    <p>
      <label>Objetivo da Reserva: </label><%= requisicao.objetivo_da_reserva %>
    </p>

    <% unless requisicao.outros.blank? %>
      <p><%= "Outros: " + requisicao.outros %></p>
    <% end %>

    <p>
      <label>Nome(s) e telefone do(s) passageiro(s): </label><%= requisicao.nome_telefone_passageiros %>
    </p>
    <p>
      <label>Roteiro da agenda: </label><%= requisicao.roteiro_da_agenda %>
    </p>
    <p>
      <label>Observação:</label> <%= requisicao.observacao %>&nbsp;
    </p>
  </div>
<% end %>

<%= link_to 'Preencher outra requisição', new_requisicao_path, :class => "voltar" %>
<a href="javaScript:window.print()" class="imprimir">Imprimir Requisição</a>

