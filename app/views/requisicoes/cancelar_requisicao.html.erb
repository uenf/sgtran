<% form_for @requisicao, :url => { :action => "cancelar_requisicao_pelo_professor", :id => @requisicao } do |f| %>

  <%= f.error_messages %>

  <div class="wrapper">

    <h2>Cancelamento de requisição de veículo</h2>
    <hr/>

    <p>
      <label>Número de Protocolo:</label>
      <%=h @requisicao.id %>
    </p>

    <p>
      <label>Data:</label>
      <%=h @requisicao.data_de_reserva.strftime("%d/%m/%Y")%>
    </p>

    <p>
      <label>Veículo:</label>
      <%=h CategoriaDeVeiculo.find(@requisicao.categoria_de_veiculo_id).nome %>
    </p>

    <p>
      <label>Objetivo:</label>
      <%=h ObjetivoDeReserva.find(@requisicao.objetivo_de_reserva_id).texto %>
    </p>

    <p>
      <label>Passageiros:</label>
      <%=h @requisicao.nome_telefone_passageiros %>
    </p>

    <p>
      <label>Roteiro:</label>
      <%=h @requisicao.roteiro_da_agenda %>
    </p>

    <p>
      <label>Observações:</label>
      <%=h @requisicao.observacao.blank? ? '-' : @requisicao.observacao %>
    </p>

    <div class="wrapper_form">
      <%= f.label :motivo_professor,
          "<span class='obrigatorio'>*</span>Motivo do cancelamento:" %>
      <%= f.text_area :motivo_professor, :cols => nil, :rows => nil %>

      <%= f.submit 'Cancelar requisição' %>
    </div>

    <br/>

  </div>

<% end %>

