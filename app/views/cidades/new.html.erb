<div class="show_padrao">

  <h1>Novo Cidade</h1>

  <% form_for(@cidade) do |f| %>
    <%= mensagem_de_erro(@cidade) %>

    <div class="show_linha">
      <div class="linha_titulo"><%= f.label :nome, "Nome:", :class => "label_obrigatorio" %></div>
      <div class="linha_texto_neutro"><%= f.text_field :nome %></div>
    </div>

    <div class="show_linha">
      <div class="linha_titulo">
        <%= f.label :estado_id, "Estado:", :class => "label_obrigatorio" %>
      </div>
      <div class="linha_texto_neutro">
        <%= f.select :estado_id, Estado.all.collect { |e| [ e.sigla, e.id ] },
                                                    {:include_blank => "-"} %>
      </div>
    </div>

    <div class="botao_concluir"><%= f.submit 'Criar Cidade' %></div>

  <% end %>
</div>

<div id="opcoes_da_visao">
  <ul>
    <li id="opcao_voltar" onclick="history.back(-1)" onmouseover="this.style.cursor='pointer'">Voltar</li>
  </ul>
</div>

