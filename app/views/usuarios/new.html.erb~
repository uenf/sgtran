  <%= f.error_messages %>

  <p>
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= label_tag :nivel %><br />
    <%= collection_select(:role, :user, @role, :id, :nome, {:prompt => true}) %>
  </p>
    <%= f.submit 'Criar' %>
  </p>
<% end %>

<%= link_to 'Back', usuarios_path %>

