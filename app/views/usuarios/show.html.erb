<div class="show_padrao">

  <h1>Dados do Usuários</h1>

  <div class="show_linha">
    <div class="linha_titulo">Nome:</div>
    <div class="linha_texto"><%=h @usuario.nome %></div>
  </div>

  <div class="show_linha">
    <div class="linha_titulo">Email:</div>
    <div class="linha_texto"><%=h @usuario.email %></div>
  </div>

  <div class="show_linha">
    <div class="linha_titulo">Login:</div>
    <div class="linha_texto"><%=h @usuario.login %></div>
  </div>

  <div class="show_linha">
    <div class="linha_titulo">Permissão:</div>
    <% @roles.each do |r| %>
      <div class="linha_texto">
      <% if r.name == "admin" %>
        <%= "Administrador" %>
      <% else %>
        <% if r.name == "visit" %>
          <%= "Visitante" %>
        <% end %>
      <% end %>
      </div>
    <% end %>
  </div>

</div>

<div id="opcoes_da_visao">
  <ul>
    <li id="opcao_voltar" onclick="location.href='<%= usuarios_path %>'" onmouseover="this.style.cursor = 'pointer'"><%= link_to 'Voltar', usuarios_path %></li>
  </ul>
</div>

