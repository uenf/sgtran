<div class="show_padrao">

  <h1>Dados do usu&aacute;rios</h1>

  <p>
    <label>Nome:</label>
    <span><%=h @usuario.nome %></span>
  </p>

  <p>
    <label>Email:</label>
    <span><%=h @usuario.email %></span>
  </p>

  <p>
    <label>Login:</label>
    <span><%=h @usuario.login %></span>
  </p>

  <p>
    <label>Permiss&atilde;o:</label>
    <% @roles.each do |r| %>
      <span>
        <% if r.name == "admin" %>
          <%= "Administrador" %>
        <% else %>
          <% if r.name == "visit" %>
            <%= "Visitante" %>
          <% end %>
        <% end %>
      </span>
    <% end %>
  </p>

</div>

<div id="opcoes_da_visao">
  <ul>
    <li id="opcao_voltar" onclick="history.back(-1)" onmouseover="this.style.cursor = 'pointer'">Voltar</li>
    <li id="opcao_editar" onclick="location.href='<%= edit_usuario_path(@usuario) %>'" onmouseover="this.style.cursor = 'pointer'"><%= link_to 'Editar', edit_usuario_path(@usuario) %></li>
    <li id="opcao_excluir" onclick="if (confirm('Tem certeza que deseja apagar?')) { var f = document.createElement('form'); f.style.display = 'none'; this.parentNode.appendChild(f); f.method = 'POST'; f.action = '/usuarios/<%= @usuario.id %>';var m = document.createElement('input'); m.setAttribute('type', 'hidden'); m.setAttribute('name', '_method'); m.setAttribute('value', 'delete'); f.appendChild(m);var s = document.createElement('input'); s.setAttribute('type', 'hidden'); s.setAttribute('name', 'authenticity_token'); s.setAttribute('value', '<%= form_authenticity_token %>'); f.appendChild(s);f.submit(); };return false;" onmouseover="this.style.cursor = 'pointer'">
      Excluir
    </li>
  </ul>
</div>

