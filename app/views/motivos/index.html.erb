<% if current_user.has_role? :admin %>
  <a href="/motivos/new" class="link_botao">Adicionar Motivos</a>
<% end %>

<table id="base_de_dados" class="tabela_base_de_dados">
  <tr>
    <th>Descri&ccedil;&atilde;o</th>
    <th class="celula_neutra_estatica"></th>
    <th class="celula_neutra_estatica"></th>
  </tr>

<% @motivos.each do |motivo| %>
  <tr>
    <td onclick="location.href='<%= motivo_path(motivo) %>'" onmouseover="this.style.cursor='pointer'"><%=h motivo.descricao %></td>
    <% if current_user.has_role? :admin %>
      <td onclick="location.href='<%= edit_motivo_path(motivo) %>'" onmouseover="this.style.cursor='pointer'"><%= link_to image_tag("editar_dado.png", :border => 0, :alt => "Editar"), edit_motivo_path(motivo) %></td>
      <td onclick="" onmouseover="this.style.cursor='pointer'"><%= link_to image_tag("deletar_dado.png", :border => 0, :alt => "Deletar"), motivo, :confirm => 'Tem certeza que deseja apagar?', :method => :delete %></td>
    <% else %>
      <td></td>
      <td></td>
    <% end %>
  </tr>
<% end %>
</table>

