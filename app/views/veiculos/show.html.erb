<div class="show_padrao">

  <h1>Dados do Veículo</h1>

  <div class="show_linha">
    <div class="linha_titulo">Marca:</div>
    <div class="linha_texto"><%=h @veiculo.marca %></div>
  </div>

  <div class="show_linha">
    <div class="linha_titulo">Modelo:</div>
    <div class="linha_texto"><%=h @veiculo.modelo %></div>
  </div>

  <div class="show_linha">
    <div class="linha_titulo">Cor:</div>
    <div class="linha_texto"><%=h @veiculo.cor %></div>
  </div>

  <div class="show_linha">
    <div class="linha_titulo">Ano:</div>
    <div class="linha_texto"><%=h @veiculo.ano %></div>
  </div>

  <div class="show_linha">
    <div class="linha_titulo">Placa:</div>
    <div class="linha_texto"><%=h @veiculo.placa %></div>
  </div>

  <div class="show_linha">
    <div class="linha_titulo">Numero de ordem:</div>
    <div class="linha_texto"><%=h @veiculo.numero_de_ordem %></div>
  </div>

  <div class="show_linha">
    <div class="linha_titulo">Renavam:</div>
    <div class="linha_texto"><%=h @veiculo.renavam %></div>
  </div>

  <div class="show_linha">
    <div class="linha_titulo">Combustível(is):</div>
    <div class="linha_texto">
    <% @veiculo.combustiveis.each do |combustivel| %>
      <%= combustivel.nome %><br />
    <% end %>
    </div>
  </div>

  <div class="show_linha">
    <div class="linha_titulo">Categoria:</div>
    <div class="linha_texto"><%=h CategoriaDeVeiculo.find(@veiculo.categoria_de_veiculo_id).nome %></div>
  </div>
</div>

<div id="opcoes_da_visao">
  <ul>
    <li id="opcao_voltar" onclick="location.href='<%= veiculos_path %>'" onmouseover="this.style.cursor = 'pointer'"><%= link_to 'Voltar', veiculos_path %></li>
    <li id="opcao_editar" onclick="location.href='<%= edit_veiculo_path(@veiculo) %>'" onmouseover="this.style.cursor = 'pointer'"><%= link_to 'Editar', edit_veiculo_path(@veiculo) %></li>
    <li id="opcao_excluir" onclick="if (confirm('Tem certeza que deseja apagar?')) { var f = document.createElement('form'); f.style.display = 'none'; this.parentNode.appendChild(f); f.method = 'POST'; f.action = '/veiculos/<%= @veiculo.id %>';var m = document.createElement('input'); m.setAttribute('type', 'hidden'); m.setAttribute('name', '_method'); m.setAttribute('value', 'delete'); f.appendChild(m);var s = document.createElement('input'); s.setAttribute('type', 'hidden'); s.setAttribute('name', 'authenticity_token'); s.setAttribute('value', '<%= form_authenticity_token %>'); f.appendChild(s);f.submit(); };return false;" onmouseover="this.style.cursor = 'pointer'">
      Excluir
    </li>
  </ul>
</div>

