<div class="show_padrao">
<h1>Editar Solicitante</h1>

<% form_for(@solicitante) do |f| %>
  <%= mensagem_de_erro(@solicitante) %>

  <div class="show_linha">
    <div class="linha_titulo"><%= f.label :nome, "Nome:" %></div>
    <div class="linha_texto_neutro"><%= f.text_field :nome %></div>
  </div>

  <div class="show_linha">
    <div class="linha_titulo"><%= f.label :email, "E-mail:" %></div>
    <div class="linha_texto_neutro"><%= f.text_field :email %></div>
  </div>

  <div class="show_linha">
    <div class="linha_titulo"><%= f.label :matricula, "Matrícula" %></div>
    <div class="linha_texto_neutro"><%= f.text_field :matricula %></div>
  </div>

  <div class="show_linha">
    <div class="linha_titulo"><%= f.label :cargo_ou_funcao, "Cargo:" %></div>
    <div class="linha_texto_neutro"><%= f.text_field :cargo_ou_funcao %></div>
  </div>

  <div class="show_linha">
    <div class="linha_titulo"><%= f.label :telefone_ou_ramal, "Telefone ou Ramal:" %></div>
    <div class="linha_texto_neutro"><%= f.text_field :telefone_ou_ramal %></div>
  </div>

  <div class="show_linha">
    <div class="linha_titulo"><%= f.label :laboratorio_ou_setor, "Laboratório ou Setor:" %></div>
    <div class="linha_texto_neutro"><%= f.text_field :laboratorio_ou_setor %></div>
  </div>

  <div class="show_linha">
    <div class="linha_titulo"><%= f.label :predio, "Prédio:" %></div>
    <div class="linha_texto_neutro"><%= f.select :predio, Solicitante.predios %></div>
  </div>

  <div class="show_linha">
    <div class="linha_titulo"><%= f.label :andar, "Andar:" %></div>
    <div class="linha_texto_neutro"><%= f.select :andar, Solicitante.andar %></div>
  </div>

  <div class="show_linha">
    <div class="linha_titulo"><%= f.label :sala, "Sala:" %></div>
    <div class="linha_texto_neutro"><%= f.text_field :sala %></div>
  </div>

    <div class="botao_concluir"><%= f.submit 'Atualizar' %></div>

<% end %>
</div>

<div id="opcoes_da_visao">
  <ul>
    <li id="opcao_voltar" onclick="history.back(-1)" onmouseover="this.style.cursor = 'pointer'">Voltar</li>
  </ul>
</div>

