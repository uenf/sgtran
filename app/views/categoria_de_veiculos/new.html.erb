<div class="show_padrao">
  <h1>Nova categoria de veículo</h1>

  <% form_for(@categoria_de_veiculo) do |f| %>
    <%= mensagem_de_erro(@categoria_de_veiculo) %>

    <div class="show_linha">
      <div class="linha_titulo"><%= f.label :nome, "Nome:" %></div>
      <div class="linha_texto_neutro"><%= f.text_field :nome %></div>
    </div>

      <div class=botao_concluir><%= f.submit 'Criar Combustível' %></div>

  <% end %>
</div>

<div id="opcoes_da_visao">
  <ul>
    <li id="opcao_voltar" onclick="location.href='<%= categoria_de_veiculos_path %>'" onmouseover="this.style.cursor = 'pointer'"><%= link_to 'Voltar', categoria_de_veiculos_path %></li>
  </ul>
</div>

