  <% admin = "True" %>
  <a href="/categoria_de_veiculos/new" class="link_new">Adicionar Categoria de Ve√≠culo</a>
<% end %>

<table id="base_de_dados" class="tabela_base_de_dados">
  <tr>
    <th class="celula_neutra_estatica"></th>
    <th>Nome</th>
    <th class="celula_neutra_estatica"></th>
  </tr>

<% @categoria_de_veiculos.each do |categoria_de_veiculo| %>
  <tr>
    <%= td_status categoria_de_veiculo %>
