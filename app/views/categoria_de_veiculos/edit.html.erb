<div class="show_padrao">
  <h1>Modificar Categoria de Veículo</h1>

  <% form_for(@categoria_de_veiculo) do |f| %>
    <%= mensagem_de_erro(@categoria_de_veiculo) %>

    <div class="show_linha">
      <div class="linha_titulo"><%= f.label :nome %></div>
      <div class="linha_texto_neutro"><%= f.text_field :nome %></div>
    </div>

      <div class="botao_concluir"><%= f.submit 'Aplicar mudanças' %></div>
  <% end %>
</div>

<div id="opcoes_da_visao">
  <ul>
    <li id="opcao_voltar" onclick="location.href='<%= combustiveis_path %>'" onmouseover="this.style.cursor = 'pointer'"><%= link_to 'Voltar', combustiveis_path %></li>
  </ul>
</div>

