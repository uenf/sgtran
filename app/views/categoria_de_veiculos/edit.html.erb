<h1>Editar categoria de veículo</h1>

<% form_for(@categoria_de_veiculo) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </p>
  <p>
    <%= f.submit 'Aplicar mudanças' %>
  </p>
<% end %>

<%= link_to 'Mostrar', @categoria_de_veiculo %> |
<%= link_to 'Voltar', categoria_de_veiculos_path %>

