<% if current_user.has_role? :admin %>
  <a href="/combustiveis/new" class="link_botao">Adicionar Combust√≠vel</a>
<% end %>

<table id="base_de_dados" class="tabela_base_de_dados">
  <tr>
    <th>Nome</th>
    <th class="celula_neutra_estatica"></th>
    <th class="celula_neutra_estatica"></th>
  </tr>

<% @combustiveis.each do |combustivel| %>
  <tr>
    <td onclick="location.href='<%= combustivel_path(combustivel) %>'" onmouseover="this.style.cursor='pointer'"><%=h combustivel.nome %></td>
    <% if current_user.has_role? :admin %>
      <td onclick="location.href='<%= edit_combustivel_path(combustivel) %>'" onmouseover="this.style.cursor='pointer'"><%= link_to image_tag("editar_dado.png", :border => 0, :alt => "Editar"), edit_combustivel_path(combustivel) %></td>
      <td onclick="" onmouseover="this.style.cursor='pointer'"><%= link_to image_tag("deletar_dado.png", :border => 0, :alt => "Deletar"), combustivel, :confirm => 'Tem certeza que deseja apagar?', :method => :delete %></td>
    <% else %>
      <td></td>
      <td></td>
    <% end %>
  </tr>
<% end %>
</table>

